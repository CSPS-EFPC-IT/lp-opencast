{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "allowedIpAddressList": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "A comma separated list of source IP addresses (using CIDR notation) that must be Allowed access to the Storage Account."
            }
        },
        "fileServiceShareName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Storage Account File Share."
            }
        },
        "locationName": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The name of the Azure Location where resources will be created."
            }
        },
        "resourceTags": {
            "type": "object",
            "defaultValue": {},
            "metadata": {
                "description": "Additional tags to add to each resource created."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Storage Account resources."
            }
        },
        "storageAccountSkuName": {
            "type": "string",
            "defaultValue": "Standard_RAGRS",
            "metadata": {
                "description": "The name of the Storage Account's SKU."
            }
        },
        "storageAccountSkuTier": {
            "type": "string",
            "defaultValue": "Standard",
            "metadata": {
                "description": "The name of the Storage Account's SKU Tier."

            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Virtual Network attached to the Storage Account."
            }
        },
        "virtualNetworkResourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "The Name of the Resource Group containing the Virtual Network attached to the Storage Account."
            }
        },
        "virtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Virtual Network Subnet attached to the Storage Account."
            }
        },
        "virtualNetworkSubscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
                "description": "The Subscription ID of Virtual Network attached to the Storage Account."
            }
        }
    },
    "functions": [],
    "variables": {
        "allowedIpAddressArray": "[if(empty(parameters('allowedIpAddressList')), createArray(), split(parameters('allowedIpAddressList'), ','))]",
        "copy": [
            {
                "name": "storageAccountIpRuleArray",
                "count": "[length(variables('allowedIpAddressArray'))]",
                "input": {
                    "value": "[variables('allowedIpAddressArray')[copyIndex('storageAccountIpRuleArray')]]",
                    "action": "Allow"
                }
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-09-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('locationName')]",
            "tags": "[parameters('resourceTags')]",
            "sku": {
                "name": "[parameters('storageAccountSkuName')]",
                "tier": "[parameters('storageAccountSkuTier')]"
            },
            "kind": "StorageV2",
            "properties": {
                "dnsEndpointType": "Standard",
                "defaultToOAuthAuthentication": false,
                "publicNetworkAccess": "Enabled",
                "allowCrossTenantReplication": true,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false,
                "allowSharedKeyAccess": true,
                "networkAcls": {
                    "resourceAccessRules": [],
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[resourceId(parameters('virtualNetworkSubscriptionId'), parameters('virtualNetworkResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('virtualNetworkSubnetName'))]",
                            "action": "Allow",
                            "state": "Succeeded"
                        }
                    ],
                    "ipRules": "[variables('storageAccountIpRuleArray')]",
                    "defaultAction": "Deny"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "requireInfrastructureEncryption": false,
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices",
            "apiVersion": "2021-09-01",
            "name": "[concat(parameters('storageAccountName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "cors": {
                    "corsRules": []
                },
                "shareDeleteRetentionPolicy": {
                    "enabled": true,
                    "days": 7
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2021-09-01",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('fileServiceShareName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', parameters('storageAccountName'), 'default')]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "accessTier": "TransactionOptimized",
                "shareQuota": 5120,
                "enabledProtocols": "SMB"
            }
        }
     ],
    "outputs": {}
}