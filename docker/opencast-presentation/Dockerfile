FROM quay.io/opencast/presentation:12.0

ENV UPLOAD_ASSET_PROPERTIES /opencast/etc/listproviders/event.upload.asset.options.properties

# Enable the PREVIEW_IMAGE configuration.
RUN sed -i -e 's|# EVENTS.EVENTS.NEW.UPLOAD_ASSET.OPTION.PREVIEW_IMAGE=|EVENTS.EVENTS.NEW.UPLOAD_ASSET.OPTION.PREVIEW_IMAGE=|g' ${UPLOAD_ASSET_PROPERTIES}

# Enable the CAPTIONS_WEBVTT configuration.
RUN sed -i -e 's|# EVENTS.EVENTS.NEW.UPLOAD_ASSET.OPTION.CAPTIONS_WEBVTT=|EVENTS.EVENTS.NEW.UPLOAD_ASSET.OPTION.CAPTIONS_WEBVTT=|g' ${UPLOAD_ASSET_PROPERTIES}

# Enable the CLASS_HANDOUT_NOTES configuration.
RUN sed -i -e 's|# EVENTS.EVENTS.NEW.UPLOAD_ASSET.OPTION.CLASS_HANDOUT_NOTES=|EVENTS.EVENTS.NEW.UPLOAD_ASSET.OPTION.CLASS_HANDOUT_NOTES=|g' ${UPLOAD_ASSET_PROPERTIES}
